		<bean class="converters.StringToActivityConverter" /> 

		<bean class="converters.AdministratorToStringConverter" /> 
		<bean class="converters.StringToAdministratorConverter" /> 

		<bean class="converters.ApplicationToStringConverter" /> 
		<bean class="converters.StringToApplicationConverter" /> 

		<bean class="converters.CommentToStringConverter" /> 
		<bean class="converters.StringToCommentConverter" /> 

		<bean class="converters.DegreeToStringConverter" /> 
		<bean class="converters.StringToDegreeConverter" /> 

		<bean class="converters.LecturerToStringConverter" /> 
		<bean class="converters.StringToLecturerConverter" /> 

		<bean class="converters.LectureToStringConverter" /> 
		<bean class="converters.StringToLectureConverter" /> 

		<bean class="converters.LectureNoteToStringConverter" /> 
		<bean class="converters.StringToLectureNoteConverter" /> 

		<bean class="converters.PrivateMessageToStringConverter" /> 
		<bean class="converters.StringToPrivateMessageConverter" /> 

