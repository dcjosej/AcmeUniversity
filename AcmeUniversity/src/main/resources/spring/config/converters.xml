		<bean class="converters.TutorToStringConverter" /> 
		<bean class="converters.StringToTutorConverter" /> 

		<bean class="converters.TutorialToStringConverter" /> 
		<bean class="converters.StringToTutorialConverter" /> 

		<bean class="converters.VerificationToStringConverter" /> 
		<bean class="converters.StringToVerificationConverter" /> 

	</util:list>
	
</beans>